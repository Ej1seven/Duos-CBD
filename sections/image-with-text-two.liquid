{{ 'component-image-with-text-two.css' | asset_url | stylesheet_tag }}

{%- style -%}
.image-with-text-two-container {
 height: 39.5rem;
 border-radius: 25px;
 display: flex;
}
.container {
  width: 50%
}
.text-container {
  {% comment %} background-color: #062F84; {% endcomment %}
  background-color: #062f84;
  background-image: linear-gradient(160deg, #062f84 0%, #86d6f4 100%);
  border-radius: 25px 0 0 25px;
  padding: 3rem;
  color: #fdfbf7
}
.photo-container {
  background-color: blue;
  border-radius: 0 25px 25px 0;
  overflow: hidden;
}
.buy-now-button {
  background-color: #FDFBF7;
  color: #062f84;
  font-weight: 700;
  border: none !Important;
  text-decoration: none !important;
  padding: 1rem 3rem;
  border-radius: 25px;
}
.buy-now-button:hover {
  background-color: #062f84;
  color: #FDFBF7;
}
.text-glow:hover {
  text-shadow: 0 0 10px #fff, 0 0 10px #fff !Important;
}
.image {
    object-fit: fill;
    height: 100%
}
.description {
  margin-bottom: 3rem;
}
  @media screen and (max-width: 750px) {
  .image-with-text-two-container {
      display: flex;
      flex-direction: column;
      height: 90rem;
}
  .container {
    width: 100%
  }
  .text-container {
  border-radius: 25px 25px 0 0;
}
.photo-container {
  border-radius: 0 0 25px 25px;
}
.image {
    width: 100%
}
}
@media screen and (max-width: 897px) and  (min-width: 878px) {
  .description {
  margin-bottom: 1rem;
}
}

{%- endstyle -%}

<!-- Image with text two section starts -->
<section class="image-with-text-two-section">
  <div class="page-width">
    <div class="image-with-text-two-container">
      <div class="container text-container"> {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'heading' -%}
              <h2 class="image-with-text-two__heading {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
                {{ block.settings.heading | escape }}
              </h2>
            {%- when 'caption' -%}
              <p class="image-with-text__text image-with-text__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }} {{ block.settings.text_style }}" {{ block.shopify_attributes }}>{{ block.settings.caption | escape }}</p>
            {%- when 'text' -%}
              <div class="description image-with-text__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
            {%- when 'button' -%}
              {%- if block.settings.button_label != blank -%}
                <a{% if block.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %} class="buy-now-button text-glow" {{ block.shopify_attributes }}>
                  {{ block.settings.button_label | escape }}
                </a>
              {%- endif -%}
          {%- endcase -%}
        {%- endfor -%}</div>
      <div class="container photo-container">
            {%- if section.settings.image != blank -%}
            <img src="{{ section.settings.image | image_url }}" class="image" />  
            {%- else -%}
             {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
      </div>
    </div>
  </div>
</section>

